
<div class = "container">
  
  <%= form_with(model: activity, local: true) do |form| %>
    <% if activity.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

        <ul>
        <% activity.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class = "row">
      <div class ="form-group col-md-6 text-center mx-auto">
        <p>Please select the title of the activity</p>
        <%= form.select(:title, Activity::Activity_list, {prompt: 'Add Activity'}, { :class => 'custom-select' }) %>
      </div>   


      <div class="form-group text-center col-md-6 mx-auto">    
        <p>Select the intensity of your workout!</p>
          <%= form.select(:intensity, Activity::Activity_intensity, {prompt: 'Select Intensity'}, { :class=> 'custom-select'}) %>
      </div>  
    </div>

    <div class="row">    
      <div class="form-group text-center col-md-6 mx-auto">        
        <%= form.label :duration %>
        <%= form.text_field :duration, class:'form-control', placeholder: 'e.g 30 minutes' %>
      </div>
      <div class="form-group text-center col-md-6 mx-auto">        
        <%= form.label :"When did you workout?" %>
        <%= form.date_field :workout_date, class:'form-control', placeholder: 'yyyy/mm/dd' %>
      </div>
    </div>

    <div class="row">
      <div class="form-group text-center col-md-12 mx-auto">
        <%= form.label :notes %>
        <%= form.text_area :notes, class:'form-control', rows:'4', placeholder: 'write down some notes to keep tract of your workout' %>
      </div>
    </div>
          
    <div class="row">
      <div class="form-group mx-auto">
        <%= form.submit "Submit", class: 'btn btn-light btn-lg btn-outline-success' %>
      </div>
    </div>
  <% end %>
</div>