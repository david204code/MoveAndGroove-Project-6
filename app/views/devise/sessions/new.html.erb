

<div class = "container">
  <div class= "row">
    <div class = "text-center card m-5 p-3 col-md-8 mx-auto">
      <h2 class = "mb-4 display-4">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group col-md-6 mx-auto">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Enter your email address" %>
        </div>

        <div class="form-group col-md-6 mx-auto">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions form-group">
          <%= f.submit "Log in", class: 'btn btn-info btn-md'%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


